{
	"name": "@yrrrrrf/client",
	"version": "0.1.0",
	"description": "A comprehensive full-stack application template with Tauri integration",
	"license": "MIT",
	"exports": "./src/lib/index.ts",
	"tasks": {
		"dev": "deno run --allow-all --node-modules-dir npm:vite dev",
		"build": "deno run --allow-all --node-modules-dir npm:vite build",
		"preview": "deno run --allow-all --node-modules-dir npm:vite preview",
		"check": "deno run --allow-all --node-modules-dir npm:svelte-kit sync && deno run --allow-all --node-modules-dir npm:svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "deno run --allow-all --node-modules-dir npm:svelte-kit sync && deno run --allow-all --node-modules-dir npm:svelte-check --tsconfig ./tsconfig.json --watch",
		"tauri": "deno run --allow-all --node-modules-dir npm:@tauri-apps/cli"
	},
	"imports": {
		"svelte": "npm:svelte@5.38.2",
		"svelte-check": "npm:svelte-check@4.3.1",
		"typescript": "npm:typescript@5.9.2",
		"@sveltejs/kit": "npm:@sveltejs/kit@2.36.1",
		"@sveltejs/adapter-static": "npm:@sveltejs/adapter-static@3.0.9",
		"@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@6.1.3",
		"@tauri-apps/api": "npm:@tauri-apps/api@2.8.0",
		"@tauri-apps/cli": "npm:@tauri-apps/cli@2.8.1",
		"@tauri-apps/plugin-opener": "npm:@tauri-apps/plugin-opener@2.5.0",
		"@lucide/svelte": "npm:@lucide/svelte@0.540.0",
		"@lucide/svelte/icons/": "npm:@lucide/svelte@0.540.0/icons/",
		"@tailwindcss/forms": "npm:@tailwindcss/forms@0.5.10",
		"@tailwindcss/typography": "npm:@tailwindcss/typography@0.5.16",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@4.1.12",
		"tailwindcss": "npm:tailwindcss@4.1.12",
		"vite": "npm:vite@7.1.3",
		"daisyui": "npm:daisyui@5.0.50"
	},
	"compilerOptions": { "strict": true },
	"lint": {
		"include": ["src/"],
		"exclude": [
			".svelte-kit/",
			".vite/",
			"build/",
			"node_modules/"
		],
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"indentWidth": 4,
		"useTabs": true,
		"singleQuote": false,
		"lineWidth": 96
	}
}
