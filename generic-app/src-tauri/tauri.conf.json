{
	"$schema": "https://schema.tauri.app/config/2",

  "productName": "{{ project_name }}",
  "version": "0.1.0",
  "identifier": "{{ app_identifier }}",

	"build": {
		"beforeDevCommand": "deno task dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "deno task build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Generic App",
				"width": 1080,
				"height": 720
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/icon.ico"
		]
	}
}
